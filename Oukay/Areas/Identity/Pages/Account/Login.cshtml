@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<br />
<br />
<br />
<div class="jumbotron bg-success ">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-lg-6">
            <section>
                <form id="account" method="post">
                    @*<h4>Use a local account to log in.</h4>*@
                    <hr style="        width: 100%;
                         border-top: 3px solid #ffef2a;" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning">Log in</button>
                        <a asp-page="./Register" class=" btn btn-warning" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                    </div>
                    @*<div class="form-group">
                        <p>
                            <a id="forgot-password" class="text-dark" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            
                        </p>
                        <p>
                            <a id="resend-confirmation" class="text-dark" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>*@
                </form>
            </section>
        </div>
        <div class="col-lg-6">
                <section>
                    <img src="https://i.ibb.co/71vTYd1/logo.png" alt="logo" width="500px" border="0" class="float-right" >
                </section>
            </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
